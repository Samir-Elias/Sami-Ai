# ============================================
# üöÄ DEVAI AGENT BACKEND - CONFIGURACI√ìN
# ============================================

# üåç Entorno
NODE_ENV=development
PORT=5000
API_VERSION=v1

# üîó URLs y CORS
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ============================================
# üóÑÔ∏è BASE DE DATOS
# ============================================

# PostgreSQL Principal
DATABASE_URL="postgresql://devai_user:devai_password@localhost:5432/devai_db?schema=public"
DB_HOST=localhost
DB_PORT=5432
DB_NAME=devai_db
DB_USER=devai_user
DB_PASSWORD=devai_password

# PostgreSQL Test (para testing)
TEST_DATABASE_URL="postgresql://devai_user:devai_password@localhost:5432/devai_test_db?schema=public"

# ============================================
# üî¥ REDIS (Cache y Sesiones)
# ============================================

REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis para testing
TEST_REDIS_URL=redis://localhost:6379/1

# ============================================
# üîê AUTENTICACI√ìN Y SEGURIDAD
# ============================================

# JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-here
JWT_REFRESH_EXPIRES_IN=30d

# Bcrypt
BCRYPT_ROUNDS=12

# Session
SESSION_SECRET=your-session-secret-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================
# üìß EMAIL (Opcional)
# ============================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# SendGrid (alternativa)
SENDGRID_API_KEY=your-sendgrid-api-key

# Email settings
FROM_EMAIL=noreply@devai-agent.com
FROM_NAME=DevAI Agent

# ============================================
# ü§ñ APIs DE IA (Proxy opcional)
# ============================================

# Gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_ENDPOINT=https://generativelanguage.googleapis.com

# Groq
GROQ_API_KEY=your-groq-api-key
GROQ_ENDPOINT=https://api.groq.com

# HuggingFace
HUGGINGFACE_API_KEY=your-huggingface-token
HUGGINGFACE_ENDPOINT=https://api-inference.huggingface.co

# Ollama
OLLAMA_ENDPOINT=http://localhost:11434

# ============================================
# üìÅ ALMACENAMIENTO
# ============================================

# Local Storage
UPLOAD_DIR=./storage/uploads
TEMP_DIR=./storage/temp
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=20

# AWS S3 (opcional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=devai-agent-files

# Cloudinary (alternativa)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ============================================
# üìä LOGGING Y MONITORING
# ============================================

# Winston Logging
LOG_LEVEL=info
LOG_FILE=./storage/logs/app.log
LOG_ERROR_FILE=./storage/logs/error.log
LOG_MAX_SIZE=5242880
LOG_MAX_FILES=5

# Sentry (Error tracking)
SENTRY_DSN=your-sentry-dsn

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id

# ============================================
# üê≥ DOCKER (Desarrollo)
# ============================================

# PostgreSQL Docker
POSTGRES_DB=devai_db
POSTGRES_USER=devai_user
POSTGRES_PASSWORD=devai_password

# Redis Docker
REDIS_DOCKER_PASSWORD=redis_password

# ============================================
# üîß CONFIGURACIONES ADICIONALES
# ============================================

# Timezone
TZ=America/Argentina/Mendoza

# Debug
DEBUG=devai:*

# Swagger
SWAGGER_ENABLED=true

# Maintenance Mode
MAINTENANCE_MODE=false

# API Features
ENABLE_AI_PROXY=true
ENABLE_FILE_UPLOAD=true
ENABLE_ANALYTICS=true
ENABLE_EMAIL_NOTIFICATIONS=false

# Cache TTL (segundos)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# ============================================
# üö® NOTAS IMPORTANTES
